{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'nere'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nere",
                    "--package=nere"
                ],
                "filter": {
                    "name": "nere",
                    "kind": "bin"
                }
            },
            "args": ["main.nar", "-d"],
            "cwd": "${workspaceFolder}"
        },
